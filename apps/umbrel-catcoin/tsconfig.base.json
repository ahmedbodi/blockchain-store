{
	"compilerOptions": {
		"target": "ES2022",
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"lib": ["ES2022", "DOM"],
		"jsx": "react-jsx",
		"rootDir": ".",
		"composite": true,
		"declaration": true,
		"strict": true,
		"skipLibCheck": true,
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"noImplicitOverride": true,
		"noPropertyAccessFromIndexSignature": true,
		"baseUrl": ".",
		"paths": {
			"#settings": ["./libs/settings/index.ts"],
			"#types": ["./libs/shared-types/index.d.ts"]
		}
	},
	"include": ["**/*.ts", "**/*.tsx"],
	"exclude": ["node_modules", "dist"]
}
